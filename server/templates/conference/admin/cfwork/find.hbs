<div class="row">
  <div class="col-lg-12 actions">{{we-action-create-btn 'admin.cfwork' req conference.id}}</div>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover sorted_table" id="cfworktable"  we-dataTable-url="/conference/{{conference.id}}/admin/cfwork" we-search-field="title">
          <thead>
            <tr>
              <th we-model-attr="id">id</th>
              <th we-model-attr="title">title</th>
              <th we-model-attr="status">status</th>
              <th we-model-attr="weModelActions">actions</th>
            </tr>
          </thead>
          <tbody>
          {{#each record}}
            <tr>
              <td>{{id}}</td>
              <td>{{title}}</td>
              <td>{{status}}</td>
              <td></td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script>$(document).ready(function() {
  we.components.dataTable('#cfworktable', {
    where: { conferenceId: {{conference.id}} },
    actionRender: function actionRender(table, data, d,record) {
      var rt = '?redirectTo=/conference/{{conference.id}}/admin/cfwork';

      var  tags = ' <a href="/conference/{{conference.id}}/admin/cfwork/'+record.id+rt+'" text="{{t "Edit"}}" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-eye-open"></i></a>';

      tags += ' <a href="/conference/{{conference.id}}/admin/cfwork/'+record.id+'/edit'+rt+'" text="{{t "Edit"}}" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-pencil"></i></a>';

      if (record.status !== 'accepted') {
        tags += ' <a href="/conference/{{conference.id}}/admin/cfwork/'+record.id+'/change-status/accepted'+rt+'" text="{{t "cfwork.approve"}}" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-thumbs-up text-success"></i> {{t "cfwork.approve"}}</a>';
      } else {
        tags += ' <a href="/conference/{{conference.id}}/admin/cfwork/'+record.id+'/change-status/discarded'+rt+'" text="{{t "cfwork.discard"}}" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-thumbs-down text-danger"></i> {{t "cfwork.discard"}}</a>';
      }
      return tags;
    }
  });
});</script>
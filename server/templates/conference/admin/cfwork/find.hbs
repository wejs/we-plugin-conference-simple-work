<div class="row">
  <div class="col-lg-12 actions">{{we-action-create-btn 'admin.cfwork' req conference.id}}</div>
  <div class="col-lg-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th we-model-attr="id">id</th>
          <th we-model-attr="title">{{t 'title'}}</th>
          <th we-model-attr="status">{{t 'status'}}</th>
          <th we-model-attr="weModelActions">{{t 'actions'}}</th>
        </tr>
      </thead>
      <tbody>
      {{#each record}}
        <tr>
          <td>{{id}}</td>
          <td>{{title}}</td>
          <td>{{status}}</td>
          <td>
            {{#ifCond status 'accepted'}}
              {{#link-to 'cfwork.changeStatus' conferenceId id 'discarded' class="btn btn-default btn-sm"}}
                <i class="glyphicon glyphicon-thumbs-down text-danger"></i>
                {{t "cfwork.discard"}}
              {{/link-to}}
            {{else}}
              {{#link-to 'cfwork.changeStatus' conferenceId id 'accepted' class="btn btn-default btn-sm"}}
                <i class="glyphicon glyphicon-thumbs-up text-success"></i>
                {{t "cfwork.approve"}}
              {{/link-to}}
            {{/ifCond}}

            {{we-action-view-btn 'cfwork' this ../req conferenceId creatorId id }}
            {{we-action-edit-btn 'cfwork' this ../req conferenceId creatorId id }}
            {{we-action-delete-btn 'cfwork' this ../req conferenceId creatorId id }}
          </td>
        </tr>
      {{/each}}
      </tbody>
      <tfoot>
        <tr>
          <td colspan="4">
            {{paginate count=metadata.count limit=query.limit currentPage=query.page req=req}}
          </td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>
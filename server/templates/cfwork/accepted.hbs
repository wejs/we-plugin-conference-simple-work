<table class="table table-striped table-hover">
  <thead>
    <th>id</th>
    <th>{{t 'form-cfwork-title'}}</th>
    <th>{{t 'form-cfwork-author'}}</th>
    <th>{{t 'View'}}</th>
  </thead>
  <tbody>
    {{#each record}}
      <tr>
        <td>{{id}}</td>
        <td>{{title}}</td>
        <td>{{author}}</td>
        <td>
          {{we-action-view-btn 'cfwork' this ../req eventId creatorId id }}
        </td>
      </tr>
    {{else}}
      <tr><td colspan="4" class="text-center">{{t 'event.cfwork.accepted.empty'}}</td></tr>
    {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <td colspan="4">
        {{paginate count=metadata.count limit=query.limit currentPage=query.page req=req}}
      </td>
    </tr>
  </tfoot>
</table>